<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background2"
    tools:context="br.com.imovelhunter.imovelhunterwebmobile.FiltroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:focusableInTouchMode="false">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout7">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encontre um imóvel com o seu perfil:"
                android:id="@+id/textView3"
                android:textSize="19dp"
                android:textStyle="bold"
                android:gravity="center_horizontal"

                android:textColor="#ffffffff" />


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Desejo imovel para:"
                android:id="@+id/txtTipoInteresse"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtTipoInteresse"
                android:layout_marginLeft="10dp"
                android:minHeight="2dp"
                android:id="@+id/rdradiogroup"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alugar"

                    android:id="@+id/rdButtonAlugar"
                    android:layout_below="@+id/linearLayout7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"

                    android:height="1dp"
                    android:textColor="#ffffff"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprar"
                    android:id="@+id/rdButtonComprar"
                    android:layout_below="@+id/linearLayout7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"

                    android:height="1dp"
                    android:textColor="#ffffff"/>


            </RadioGroup>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Valor desejado:"
                android:id="@+id/txtValorProx"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_below="@+id/txtValorProx"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Tipo de imóvel:"
                android:id="@+id/txtTipoImovel"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerTipo"
                android:layout_below="@+id/txtTipoImovel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="UF:"
                android:id="@+id/txtUf"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerUf"
                android:layout_below="@+id/txtTipoImovel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Cidade:"
                android:id="@+id/txtCidade"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCidade"
                android:layout_below="@+id/txtTipoImovel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />



            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Bairro:"
                android:id="@+id/txtBairro"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerBairro"
                android:layout_below="@+id/txtTipoImovel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Quantidade de quartos:"
                android:id="@+id/txtQtQuartos"
                android:textSize="20dp"
                android:textStyle="bold"
                android:height="35dp"
                android:textColor="#ffffffff" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerQuartos"
                android:layout_below="@+id/txtTipoImovel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="Confirmar"
                    android:id="@+id/btnConfirmar"

                    android:background="@drawable/borda_arredondada"/>


            </LinearLayout>














        </LinearLayout>
    </ScrollView>



</RelativeLayout>
